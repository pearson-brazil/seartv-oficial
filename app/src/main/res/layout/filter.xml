<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    android:orientation="horizontal"
    android:background="@color/app_bar_filter_color"
    android:weightSum="1"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.33"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/filter_popular"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Popular"
            android:layout_margin="8dp"
            style="@style/FilterButtonText"
            android:background="@drawable/filter_button_unselected"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.33"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/filter_best"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Melhores"
            android:layout_margin="8dp"
            style="@style/FilterButtonText"
            android:background="@drawable/filter_button_unselected"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.33"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/filter_soon"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Em Breve"
            android:layout_margin="8dp"
            style="@style/FilterButtonText"
            android:background="@drawable/filter_button_unselected"/>
    </LinearLayout>
</LinearLayout>
