<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ImageNotAvailable">
        <item name="android:textColor">@color/card_grade_title_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MovieTitleStyle">
        <item name="android:textColor">@color/card_movie_title_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MovieGradeTitleStyle">
        <item name="android:textColor">@color/card_grade_title_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MovieGradeStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>